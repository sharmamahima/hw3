<h1>Add a New Place</h1>

<%= form_with model: @place, local: true do |form| %>
  <div>
    <%= form.label :name, 'Name:' %>
    <%= form.text_field :name %>
  </div>
  
  <br>
  <br>


  <div>
    <%= form.submit "Create Place" %>
  </div>
<% end %>

